<div class="map-popup">
  {% if image_url != blank %}
    <div class="map-popup-image">
      <img src="{{ image_url }}" alt="{{ event_title }}" loading="lazy">
    </div>
  {% endif %}
  
  <div class="map-popup-content">
    <h3 class="map-popup-title">{{ event_title }}</h3>
    
    <div class="map-popup-details">
      {% if venue != blank %}
        <div class="map-popup-venue">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>{{ venue }}</span>
        </div>
      {% endif %}
      
      {% if distance != blank %}
        <div class="map-popup-distance">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          <span>{{ distance }}</span>
        </div>
      {% endif %}
      
      {% if genre != blank %}
        <div class="map-popup-genre">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
          </svg>
          <span>{{ genre }}{% if subgenre != blank %} - {{ subgenre }}{% endif %}</span>
        </div>
      {% endif %}
    </div>
    
    <a href="/event/{{ event_id }}" class="map-popup-button">View Details</a>
  </div>
</div>